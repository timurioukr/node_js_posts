<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>

<body class="d-flex">
  <%- include('./partials/nav.ejs') %>
  <h1>Contacts:</h1>
  <ul>
    <% if (contacts.length) { %>
      <% contacts.forEach(({ link, name }) => { %>
        <li>
          <a href="<%= link %>"><%= name %></a>
        </li>
      <% }) %>
    <% } %>  
  </ul>
  </body>
</body>
</html>

  <style>

    nav ul {
      margin: 0;
      padding: 0;
      display: flex;
    }

    nav li {
      list-style: none;
    }

    nav a {
      min-height: 60px;
      display: block;
      padding: 10px 20px;
      line-height: 60px;
    }

    a {
      text-decoration: none;
      color: #fff;
    }
  </style>